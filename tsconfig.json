{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "src/types"],
  "exclude": [
    "src/components/pages/Matches - Today - V1.tsx",
    "src/components/pages/Matches-8-Nov-2025 V1.tsx",
    "src/components/pages/Matches.tsx.backup",
    "**/*.backup",
    "**/* copy.*",
    "**/* - *"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}